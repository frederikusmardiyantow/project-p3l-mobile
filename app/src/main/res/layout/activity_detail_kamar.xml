<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailKamarActivity"
    android:background="@color/blue50">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/imageKamar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/kamar_2" />

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/secondary"
            android:text=""
            android:background="@drawable/rounded_background"
            android:layout_marginStart="20dp"
            android:tint="@color/white"
            android:gravity="center|center_vertical|center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:drawableStartCompat="@drawable/baseline_arrow_back_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imageKamar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:layout_marginTop="-25dp"
            android:layout_marginHorizontal="16dp"
            android:padding="16dp"
            android:paddingBottom="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KAMAR"
                android:textColor="@color/gray"
                android:textSize="10dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvJudulKamar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kamar Detail"
                android:textSize="25dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:alpha="0.5"
                android:background="@color/gray"
            />

            <ImageView
                android:id="@+id/imageKamar2"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/kamar_1"
                android:scaleType="centerCrop"
                android:layout_marginTop="32dp"/>

            <TextView
                android:id="@+id/tvPenjelasanKamar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kamar {detailKamar.jenis_kamar} seluas {detailKamar.ukuran_kamar} meter persegi yang baru direnovasi didesain ulang dengan indah dan didekorasi dengan perabotan penuh gaya. Semua kamar memiliki balkon ekstra luas dengan pemandangan kolam renang yang dikelilingi oleh Taman Kerajaan yang rimbun, dan situs warisan Istana Kerajaan. Fitur khusus lainnya termasuk akses Internet nirkabel gratis, Smart LED TV, fasilitas kopi dan teh, brankas dalam kamar seukuran laptop, dan tempat tidur premium dengan kasur dengan bantalan ekstra lembut."
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="8dp"
                android:layout_gravity="start|end"
                android:textAlignment="viewStart"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvKapasitas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kapasitas"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="8dp"
                    android:background="@drawable/border_background"
                    />

                <!-- Menambahkan spasi antara dua TextView -->
                <View
                    android:layout_width="16dp"
                    android:layout_height="1dp" />

                <TextView
                    android:id="@+id/tvUkuran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Luas Kamar"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="8dp"
                    android:background="@drawable/border_background"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rincian Kamar"
                android:layout_marginTop="16dp"
                android:textSize="22dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvRincianKamar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ini rincian kamar"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fasilitas Kamar"
                android:layout_marginTop="18dp"
                android:textSize="22dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvFasilitasKamar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ini fasilitas kamar"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>