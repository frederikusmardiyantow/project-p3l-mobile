<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:outlineSpotShadowColor="@color/black"
        android:outlineAmbientShadowColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <ImageView
                android:id="@+id/gambarJenis"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/kamar_1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="8dp">

                <TextView
                    android:id="@+id/textJudulJenisKamar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Jenis Kamar"
                    android:width="380dp"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/textKapasitas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kapasitas Kamar: 2 Orang"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/textUkuranKamar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ukuran Kamar: 30 mÂ²" />


                <TextView
                    android:id="@+id/textLihatSelengkapnya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="~ Lihat Selengkapnya ~"
                    android:textStyle="italic"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal|center_vertical" />

            </LinearLayout>

            <Button
                android:id="@+id/btnPesanSekarang"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/primary"
                android:text="Pesan Sekarang!"
                android:layout_gravity="center"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>