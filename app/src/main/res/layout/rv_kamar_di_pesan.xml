<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="true"
        android:clipToPadding="true"
        app:cardBackgroundColor="@color/material_dynamic_neutral99"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="8dp"
        android:background="@color/material_dynamic_neutral95"
        android:backgroundTint="@color/material_dynamic_neutral95">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gambarKamarDiPesan"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/kamar_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textJudulKamarDiPesan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Kamar"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/textHargaKamarDiPesan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp 1.000.000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:layout_marginTop="16dp"
                    android:textColor="@android:color/holo_green_dark"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>